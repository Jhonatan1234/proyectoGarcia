        <Button Content="Baja&#xD;&#xA;" HorizontalAlignment="Left" Margin="120,150,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2" Grid.ColumnSpan="2" Height="24"/>
        <Button Content="Cambio&#xD;&#xA;" HorizontalAlignment="Left" Margin="0,150,0,0" VerticalAlignment="Top" Width="75" Grid.Column="2" Click="Button_Click_3" Height="24"/>
        <TextBox x:Name="dir" HorizontalAlignment="Left" Height="23" Margin="120,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="3"/>
        <TextBox x:Name="idem" HorizontalAlignment="Left" Height="23" Margin="120,-10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="3"/>
        <Label Content="id" HorizontalAlignment="Left" Margin="19,-10,0,254" Height="26" VerticalAlignment="Bottom"/>
        <Button Content="Consultar&#xD;&#xA;" Grid.Column="2" HorizontalAlignment="Left" Margin="10,126,-8,0" VerticalAlignment="Top" Width="75" Click="Button_Click_4"/>
        <DataGrid x:Name="dbfrid" HorizontalAlignment="Left" Margin="19,194,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="66" Width="235"/>

    </Grid>
</Window>
