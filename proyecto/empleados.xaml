        <TextBox x:Name="nom" HorizontalAlignment="Left" Height="23" Margin="120,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="nom_TextChanged" Grid.ColumnSpan="3"/>
